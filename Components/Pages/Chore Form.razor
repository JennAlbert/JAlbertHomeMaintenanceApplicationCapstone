@page "/AddTasks"
@inject IJSRuntime JS

<PageTitle>Add Tasks</PageTitle>

	<h3>Chore Form</h3>

	<h3>Please enter a chore below.</h3>

	<body>
		<EditForm Models ="@newuserChore" OnValidSubmit="SubmitForm">
			<label for="addtask">Add a Task</label>
			<InputText @bind-Value="@newuserChore.Name"/>
			<br><br>


			<label for="time spent">Enter the time spent doing the chore</label>
			<br><br>
		 <InputSelect @bind-Value = "@newuserChore.TimeSpent">
			 <option value= "5 minutes"/>
			 <option value= "10 minutes"/>
			 <option value= "15 minutes"/>
			<option value="20 minutes" />
			<option value="30 minutes" />
			<option value="45 minutes" />
			<option value="60 minutes" />
		 </InputSelect>

			<br><br>
			<br><br>

			<label for="supplies">Enter any supplies needed for the chore</label>
			<br><br>
			<InputTextArea @bind-Value = "@newuserChore.Supply" rows="5" cols="50">

	</InputTextArea>
			<br> <br>
			<br><br>


			<h3>Please select your residence type below.</h3>
			<input type="radio" id="homeresidencetype" name="homeresidence" value="House" />
			<label for="homeresidence">House</label><br><br>
			<input type="radio" id="apartmentresidencetype" name="homeresidence" value="Apartment" />
			<label for="homeresidence">Apartment</label><br><br>

			<input type="submit" value="Submit">
		</EditForm>

</body>


